---
import { getCollection } from 'astro:content';
import { Header } from '../components/layout/Header';
import '../styles/globals.css';
import { SITE_TITLE } from '../consts';

// Get all tools content
const tools = await getCollection('tools');

// Sort by publication date (newest first)
const sortedTools = tools.sort(
  (a, b) => new Date(b.data.pubDate).valueOf() - new Date(a.data.pubDate).valueOf()
);
---

<!doctype html>
<html lang="en" class="dark">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Security Tools & Scripts - {SITE_TITLE}</title>
    <meta name="description" content="Practical cybersecurity tools, scripts, and utilities for security professionals and penetration testers.">
    <meta name="generator" content={Astro.generator}>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg">
  </head>
  <body class="min-h-screen bg-background text-foreground antialiased">
    <Header client:idle />
    
    <main>
      <!-- Hero Section -->
      <section class="py-20 bg-gradient-to-br from-blue-950/20 via-background to-background">
        <div class="container mx-auto px-4 sm:px-6 lg:px-8">
          <div class="max-w-3xl mx-auto text-center">
            <div class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-blue-500/10 text-blue-400 border border-blue-500/20 mb-6">
              âš¡ Practical Utilities
            </div>
            <h1 class="text-4xl lg:text-5xl font-bold leading-tight text-foreground mb-6">
              Security Tools & Scripts
            </h1>
            <p class="text-xl text-muted-foreground leading-relaxed">
              Practical cybersecurity tools, automation scripts, and utilities designed to streamline 
              security assessments, penetration testing, and threat analysis workflows.
            </p>
          </div>
        </div>
      </section>

      <!-- Tools Grid -->
      <section class="py-16">
        <div class="container mx-auto px-4 sm:px-6 lg:px-8">
          {sortedTools.length > 0 ? (
            <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
              {sortedTools.map((tool) => (
                <article class="group cursor-pointer">
                  <div class="bg-card border border-border rounded-lg overflow-hidden hover:shadow-lg transition-all duration-300 hover:border-blue-500/20">
                    <div class="p-6 space-y-4">
                      <div class="flex items-center justify-between">
                        <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-blue-500/10 text-blue-400 border border-blue-500/20">
                          ðŸ”§ {tool.data.category}
                        </span>
                        <time class="text-xs text-muted-foreground">
                          {new Date(tool.data.pubDate).toLocaleDateString()}
                        </time>
                      </div>
                      
                      <h3 class="text-xl font-semibold leading-tight text-card-foreground group-hover:text-blue-500 transition-colors">
                        {tool.data.title}
                      </h3>
                      
                      <p class="text-muted-foreground text-sm leading-relaxed line-clamp-3">
                        {tool.data.description}
                      </p>
                      
                      <div class="flex items-center justify-between pt-2 border-t border-border">
                        <div class="flex items-center space-x-2 text-xs text-muted-foreground">
                          <svg class="h-3 w-3" fill="currentColor" viewBox="0 0 20 20">
                            <path fillRule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clipRule="evenodd" />
                          </svg>
                          <span>{tool.data.tags?.join(', ')}</span>
                        </div>
                        <a 
                          href={`/tools/${tool.slug}`}
                          class="flex items-center text-blue-500 hover:text-blue-400 font-medium text-sm transition-colors"
                        >
                          View Tool
                          <svg class="ml-1 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M17 8l4 4m0 0l-4 4m4-4H3" />
                          </svg>
                        </a>
                      </div>
                    </div>
                  </div>
                </article>
              ))}
            </div>
          ) : (
            <div class="text-center py-20">
              <div class="w-16 h-16 bg-muted rounded-full flex items-center justify-center mx-auto mb-6">
                <svg class="w-8 h-8 text-muted-foreground" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                  <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
              </div>
              <h3 class="text-xl font-semibold text-foreground mb-2">
                Tools Coming Soon
              </h3>
              <p class="text-muted-foreground max-w-md mx-auto">
                We're developing a comprehensive collection of security tools and automation scripts. 
                Check back soon for practical utilities to enhance your security workflows.
              </p>
            </div>
          )}
        </div>
      </section>

      <!-- Tool Categories -->
      <section class="py-16 bg-muted/20 border-t border-border">
        <div class="container mx-auto px-4 sm:px-6 lg:px-8">
          <div class="text-center mb-12">
            <h2 class="text-3xl font-bold mb-4 text-foreground">Tool Categories</h2>
            <p class="text-muted-foreground max-w-2xl mx-auto">
              Organized tools to help you find the right utility for your security projects
            </p>
          </div>
          
          <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
            <div class="text-center p-6 bg-background border border-border rounded-lg hover:border-blue-500/20 transition-colors">
              <div class="w-12 h-12 bg-blue-500/10 rounded-full flex items-center justify-center mx-auto mb-4">
                <svg class="w-6 h-6 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z" />
                </svg>
              </div>
              <h3 class="font-semibold text-foreground mb-2">Network Scanners</h3>
              <p class="text-sm text-muted-foreground">Port scanners, service discovery, and network enumeration tools</p>
            </div>

            <div class="text-center p-6 bg-background border border-border rounded-lg hover:border-red-500/20 transition-colors">
              <div class="w-12 h-12 bg-red-500/10 rounded-full flex items-center justify-center mx-auto mb-4">
                <svg class="w-6 h-6 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
                </svg>
              </div>
              <h3 class="font-semibold text-foreground mb-2">Exploit Tools</h3>
              <p class="text-sm text-muted-foreground">Exploitation frameworks, payloads, and vulnerability testing utilities</p>
            </div>

            <div class="text-center p-6 bg-background border border-border rounded-lg hover:border-green-500/20 transition-colors">
              <div class="w-12 h-12 bg-green-500/10 rounded-full flex items-center justify-center mx-auto mb-4">
                <svg class="w-6 h-6 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
              <h3 class="font-semibold text-foreground mb-2">Analysis Scripts</h3>
              <p class="text-sm text-muted-foreground">Log analysis, forensics, and data processing automation scripts</p>
            </div>

            <div class="text-center p-6 bg-background border border-border rounded-lg hover:border-purple-500/20 transition-colors">
              <div class="w-12 h-12 bg-purple-500/10 rounded-full flex items-center justify-center mx-auto mb-4">
                <svg class="w-6 h-6 text-purple-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M13 10V3L4 14h7v7l9-11h-7z" />
                </svg>
              </div>
              <h3 class="font-semibold text-foreground mb-2">Automation</h3>
              <p class="text-sm text-muted-foreground">Workflow automation, reporting tools, and productivity scripts</p>
            </div>
          </div>
        </div>
      </section>

      <!-- CTA Section -->
      <section class="py-16 bg-gradient-to-r from-blue-950/20 to-background border-t border-border">
        <div class="container mx-auto px-4 sm:px-6 lg:px-8">
          <div class="max-w-3xl mx-auto text-center">
            <h2 class="text-3xl font-bold text-foreground mb-4">
              Need Custom Tools?
            </h2>
            <p class="text-lg text-muted-foreground mb-8">
              Looking for specialized security tools or automation scripts for your specific use case? 
              We can help develop custom solutions for your security workflows.
            </p>
            <div class="flex flex-col sm:flex-row gap-4 justify-center">
              <a
                href="/contact"
                class="inline-flex items-center justify-center px-6 py-3 border-2 border-blue-600 bg-blue-600 text-white rounded-lg font-semibold hover:bg-blue-700 hover:border-blue-700 transition-colors duration-200"
              >
                Request Custom Tool
                <svg class="ml-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M17 8l4 4m0 0l-4 4m4-4H3" />
                </svg>
              </a>
              <a
                href="/newsletter"
                class="inline-flex items-center justify-center px-6 py-3 border-2 border-border bg-transparent text-foreground rounded-lg font-semibold hover:bg-secondary transition-colors duration-200"
              >
                Get Tool Updates
                <svg class="ml-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
              </a>
            </div>
          </div>
        </div>
      </section>
    </main>
    
    <!-- Footer -->
    <footer class="py-12 bg-secondary border-t border-border">
      <div class="container mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center">
          <div class="flex items-center justify-center space-x-2 mb-4">
            <svg class="h-8 w-8 text-red-500" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/>
            </svg>
            <span class="font-bold text-xl text-foreground">mitm.life</span>
          </div>
          <p class="text-muted-foreground mb-6">
            Security research and analysis for the modern web
          </p>
          <div class="flex justify-center space-x-6">
            <a href="https://twitter.com/mitmlife" class="text-muted-foreground hover:text-red-500 transition-colors">
              <span class="sr-only">Twitter</span>
              <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 20 20">
                <path d="M6.29 18.251c7.547 0 11.675-6.253 11.675-11.675 0-.178 0-.355-.012-.53A8.348 8.348 0 0020 3.92a8.19 8.19 0 01-2.357.646 4.118 4.118 0 001.804-2.27 8.224 8.224 0 01-2.605.996 4.107 4.107 0 00-6.993 3.743 11.65 11.65 0 01-8.457-4.287 4.106 4.106 0 001.27 5.477A4.073 4.073 0 01.8 7.713v.052a4.105 4.105 0 003.292 4.022 4.095 4.095 0 01-1.853.07 4.108 4.108 0 003.834 2.85A8.233 8.233 0 010 16.407a11.616 11.616 0 006.29 1.84"/>
              </svg>
            </a>
            <a href="https://github.com/mitmlife" class="text-muted-foreground hover:text-red-500 transition-colors">
              <span class="sr-only">GitHub</span>
              <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 0C4.477 0 0 4.484 0 10.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0110 4.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.203 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.942.359.31.678.921.678 1.856 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0020 10.017C20 4.484 15.522 0 10 0z" clip-rule="evenodd"/>
              </svg>
            </a>
          </div>
          <div class="mt-8 pt-8 border-t border-border">
            <p class="text-sm text-muted-foreground">
              Â© 2025 mitm.life. All rights reserved.
            </p>
          </div>
        </div>
      </div>
