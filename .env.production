# Production Environment Variables for mitm.life
# This file contains production-specific configurations

# Site Configuration
SITE_URL=https://mitm.life
NODE_ENV=production

# Analytics Configuration
NEXT_PUBLIC_ANALYTICS_PROVIDER=plausible
PLAUSIBLE_DOMAIN=mitm.life

# Payment Configuration
NEXT_PUBLIC_PAYMENTS_TEST_MODE=false
PAYMENTS_PROVIDER=stripe

# Security Configuration
NEXT_PUBLIC_SECURE_MODE=true

# Performance Configuration
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_SEARCH=true

# Comments Configuration (if using Giscus)
NEXT_PUBLIC_GISCUS_REPO=
NEXT_PUBLIC_GISCUS_REPO_ID=
NEXT_PUBLIC_GISCUS_CATEGORY=
NEXT_PUBLIC_GISCUS_CATEGORY_ID=

# Build Configuration
NEXT_TELEMETRY_DISABLED=1