---
import { getCollection } from 'astro:content';
import { Header } from '../components/layout/Header';
import '../styles/globals.css';
import { SITE_TITLE } from '../consts';

// Get all research content
const research = await getCollection('research');

// Sort by publication date (newest first)
const sortedResearch = research.sort(
  (a, b) =>
    new Date(b.data.pubDate).valueOf() - new Date(a.data.pubDate).valueOf()
);
---

<!doctype html>
<html lang="en" class="dark">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Security Research & Analysis - {SITE_TITLE}</title>
    <meta
      name="description"
      content="Original cybersecurity research, vulnerability analysis, and security findings from the modern threat landscape."
    />
    <meta name="generator" content={Astro.generator} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  </head>
  <body class="min-h-screen bg-background text-foreground antialiased">
    <Header client:idle />

    <main>
      <!-- Hero Section -->
      <section
        class="py-20 bg-gradient-to-br from-red-950/20 via-background to-background"
      >
        <div class="container mx-auto px-4 sm:px-6 lg:px-8">
          <div class="max-w-3xl mx-auto text-center">
            <div
              class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-red-500/10 text-red-400 border border-red-500/20 mb-6"
            >
              üîç Analysis & Findings
            </div>
            <h1
              class="text-4xl lg:text-5xl font-bold leading-tight text-foreground mb-6"
            >
              Security Research & Analysis
            </h1>
            <p class="text-xl text-muted-foreground leading-relaxed">
              Original cybersecurity research, vulnerability analysis, threat
              intelligence, and in-depth security findings from our ongoing
              investigation of the modern threat landscape.
            </p>
          </div>
        </div>
      </section>

      <!-- Research Grid -->
      <section class="py-16">
        <div class="container mx-auto px-4 sm:px-6 lg:px-8">
          {
            sortedResearch.length > 0 ? (
              <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
                {sortedResearch.map(research => (
                  <article class="group cursor-pointer">
                    <div class="bg-card border border-border rounded-lg overflow-hidden hover:shadow-lg transition-all duration-300 hover:border-red-500/20">
                      <div class="p-6 space-y-4">
                        <div class="flex items-center justify-between">
                          <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-red-500/10 text-red-400 border border-red-500/20">
                            üß™ {research.data.category}
                          </span>
                          <time class="text-xs text-muted-foreground">
                            {new Date(
                              research.data.pubDate
                            ).toLocaleDateString()}
                          </time>
                        </div>

                        <h3 class="text-xl font-semibold leading-tight text-card-foreground group-hover:text-red-500 transition-colors">
                          {research.data.title}
                        </h3>

                        <p class="text-muted-foreground text-sm leading-relaxed line-clamp-3">
                          {research.data.description}
                        </p>

                        <div class="flex items-center justify-between pt-2 border-t border-border">
                          <div class="flex items-center space-x-2 text-xs text-muted-foreground">
                            {research.data.difficulty && (
                              <span
                                class={`px-2 py-1 rounded-full text-xs ${
                                  research.data.difficulty === 'beginner'
                                    ? 'bg-green-500/10 text-green-400'
                                    : research.data.difficulty ===
                                        'intermediate'
                                      ? 'bg-yellow-500/10 text-yellow-400'
                                      : 'bg-red-500/10 text-red-400'
                                }`}
                              >
                                {research.data.difficulty}
                              </span>
                            )}
                            <span>{research.data.tags?.join(', ')}</span>
                          </div>
                          <a
                            href={`/research/${research.slug}`}
                            class="flex items-center text-red-500 hover:text-red-400 font-medium text-sm transition-colors"
                          >
                            Read Research
                            <svg
                              class="ml-1 h-4 w-4"
                              fill="none"
                              stroke="currentColor"
                              viewBox="0 0 24 24"
                            >
                              <path
                                strokeLinecap="round"
                                strokeLinejoin="round"
                                strokeWidth={2}
                                d="M17 8l4 4m0 0l-4 4m4-4H3"
                              />
                            </svg>
                          </a>
                        </div>
                      </div>
                    </div>
                  </article>
                ))}
              </div>
            ) : (
              <div class="text-center py-20">
                <div class="w-16 h-16 bg-muted rounded-full flex items-center justify-center mx-auto mb-6">
                  <svg
                    class="w-8 h-8 text-muted-foreground"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      strokeLinecap="round"
                      strokeLinejoin="round"
                      strokeWidth={2}
                      d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"
                    />
                  </svg>
                </div>
                <h3 class="text-xl font-semibold text-foreground mb-2">
                  Research Coming Soon
                </h3>
                <p class="text-muted-foreground max-w-md mx-auto">
                  We're conducting in-depth security research and vulnerability
                  analysis. Check back soon for original findings, threat
                  intelligence, and detailed security investigations.
                </p>
              </div>
            )
          }
        </div>
      </section>

      <!-- Research Categories -->
      <section class="py-16 bg-muted/20 border-t border-border">
        <div class="container mx-auto px-4 sm:px-6 lg:px-8">
          <div class="text-center mb-12">
            <h2 class="text-3xl font-bold mb-4 text-foreground">
              Research Areas
            </h2>
            <p class="text-muted-foreground max-w-2xl mx-auto">
              Our research covers various aspects of cybersecurity, from
              vulnerability discovery to threat analysis
            </p>
          </div>

          <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
            <div
              class="text-center p-6 bg-background border border-border rounded-lg hover:border-red-500/20 transition-colors"
            >
              <div
                class="w-12 h-12 bg-red-500/10 rounded-full flex items-center justify-center mx-auto mb-4"
              >
                <svg
                  class="w-6 h-6 text-red-500"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    strokeLinecap="round"
                    strokeLinejoin="round"
                    strokeWidth={2}
                    d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.99-.833-2.764 0L3.05 16.5c-.77.833.192 2.5 1.732 2.5z"
                  ></path>
                </svg>
              </div>
              <h3 class="font-semibold text-foreground mb-2">
                Vulnerability Research
              </h3>
              <p class="text-sm text-muted-foreground">
                Zero-day discovery, exploit development, and vulnerability
                analysis
              </p>
            </div>

            <div
              class="text-center p-6 bg-background border border-border rounded-lg hover:border-orange-500/20 transition-colors"
            >
              <div
                class="w-12 h-12 bg-orange-500/10 rounded-full flex items-center justify-center mx-auto mb-4"
              >
                <svg
                  class="w-6 h-6 text-orange-500"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    strokeLinecap="round"
                    strokeLinejoin="round"
                    strokeWidth={2}
                    d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
                  ></path>
                </svg>
              </div>
              <h3 class="font-semibold text-foreground mb-2">
                Threat Intelligence
              </h3>
              <p class="text-sm text-muted-foreground">
                APT analysis, malware research, and threat actor profiling
              </p>
            </div>

            <div
              class="text-center p-6 bg-background border border-border rounded-lg hover:border-purple-500/20 transition-colors"
            >
              <div
                class="w-12 h-12 bg-purple-500/10 rounded-full flex items-center justify-center mx-auto mb-4"
              >
                <svg
                  class="w-6 h-6 text-purple-500"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    strokeLinecap="round"
                    strokeLinejoin="round"
                    strokeWidth={2}
                    d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"
                  ></path>
                </svg>
              </div>
              <h3 class="font-semibold text-foreground mb-2">Attack Vectors</h3>
              <p class="text-sm text-muted-foreground">
                Novel attack techniques and exploitation methodologies
              </p>
            </div>

            <div
              class="text-center p-6 bg-background border border-border rounded-lg hover:border-blue-500/20 transition-colors"
            >
              <div
                class="w-12 h-12 bg-blue-500/10 rounded-full flex items-center justify-center mx-auto mb-4"
              >
                <svg
                  class="w-6 h-6 text-blue-500"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    strokeLinecap="round"
                    strokeLinejoin="round"
                    strokeWidth={2}
                    d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"
                  ></path>
                </svg>
              </div>
              <h3 class="font-semibold text-foreground mb-2">
                Defense Research
              </h3>
              <p class="text-sm text-muted-foreground">
                Detection methods, defensive techniques, and security
                improvements
              </p>
            </div>
          </div>
        </div>
      </section>

      <!-- Featured Research -->
      <section class="py-16 border-t border-border">
        <div class="container mx-auto px-4 sm:px-6 lg:px-8">
          <div class="text-center mb-12">
            <h2 class="text-3xl font-bold mb-4 text-foreground">
              Latest Findings
            </h2>
            <p class="text-muted-foreground max-w-2xl mx-auto">
              Stay up-to-date with our most recent security research and
              vulnerability discoveries
            </p>
          </div>

          <div class="max-w-4xl mx-auto">
            <div
              class="bg-gradient-to-r from-red-950/20 to-orange-950/20 border border-red-500/20 rounded-lg p-8"
            >
              <div class="flex items-start space-x-4">
                <div
                  class="w-12 h-12 bg-red-500/10 rounded-full flex items-center justify-center flex-shrink-0"
                >
                  <svg
                    class="w-6 h-6 text-red-500"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      strokeLinecap="round"
                      strokeLinejoin="round"
                      strokeWidth={2}
                      d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.99-.833-2.764 0L3.05 16.5c-.77.833.192 2.5 1.732 2.5z"
                    ></path>
                  </svg>
                </div>
                <div>
                  <h3 class="text-xl font-semibold text-foreground mb-2">
                    Responsible Disclosure
                  </h3>
                  <p class="text-muted-foreground mb-4">
                    We follow responsible disclosure practices for all
                    vulnerability research. Security findings are reported to
                    affected vendors before publication, allowing time for
                    patches to be developed and deployed.
                  </p>
                  <p class="text-sm text-muted-foreground">
                    If you've discovered a vulnerability through our research,
                    please report it through proper channels before attempting
                    exploitation.
                  </p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>

      <!-- CTA Section -->
      <section
        class="py-16 bg-gradient-to-r from-red-950/20 to-background border-t border-border"
      >
        <div class="container mx-auto px-4 sm:px-6 lg:px-8">
          <div class="max-w-3xl mx-auto text-center">
            <h2 class="text-3xl font-bold text-foreground mb-4">
              Collaborate on Research
            </h2>
            <p class="text-lg text-muted-foreground mb-8">
              Interested in collaborating on security research or have findings
              to share? We welcome partnerships with researchers, organizations,
              and security professionals.
            </p>
            <div class="flex flex-col sm:flex-row gap-4 justify-center">
              <a
                href="/contact"
                class="inline-flex items-center justify-center px-6 py-3 border-2 border-red-700 bg-red-700 text-white rounded-lg font-semibold hover:bg-red-800 hover:border-red-800 transition-colors duration-200"
              >
                Collaborate with Us
                <svg
                  class="ml-2 h-5 w-5"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    strokeLinecap="round"
                    strokeLinejoin="round"
                    strokeWidth={2}
                    d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                </svg>
              </a>
              <a
                href="/newsletter"
                class="inline-flex items-center justify-center px-6 py-3 border-2 border-border bg-transparent text-foreground rounded-lg font-semibold hover:bg-secondary transition-colors duration-200"
              >
                Get Research Updates
                <svg
                  class="ml-2 h-5 w-5"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    strokeLinecap="round"
                    strokeLinejoin="round"
                    strokeWidth={2}
                    d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                  ></path>
                </svg>
              </a>
            </div>
          </div>
        </div>
      </section>
    </main>

    <!-- Footer -->
    <footer class="py-12 bg-secondary border-t border-border">
      <div class="container mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center">
          <div class="flex items-center justify-center space-x-2 mb-4">
            <svg
              class="h-8 w-8 text-red-500"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path>
            </svg>
            <span class="font-bold text-xl text-foreground">mitm.life</span>
          </div>
          <p class="text-muted-foreground mb-6">
            Security research and analysis for the modern web
          </p>
          <div class="flex justify-center space-x-6">
            <a
              href="https://twitter.com/mitmlife"
              class="text-muted-foreground hover:text-red-500 transition-colors"
            >
              <span class="sr-only">Twitter</span>
              <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 20 20">
                <path
                  d="M6.29 18.251c7.547 0 11.675-6.253 11.675-11.675 0-.178 0-.355-.012-.53A8.348 8.348 0 0020 3.92a8.19 8.19 0 01-2.357.646 4.118 4.118 0 001.804-2.27 8.224 8.224 0 01-2.605.996 4.107 4.107 0 00-6.993 3.743 11.65 11.65 0 01-8.457-4.287 4.106 4.106 0 001.27 5.477A4.073 4.073 0 01.8 7.713v.052a4.105 4.105 0 003.292 4.022 4.095 4.095 0 01-1.853.07 4.108 4.108 0 003.834 2.85A8.233 8.233 0 010 16.407a11.616 11.616 0 006.29 1.84"
                ></path>
              </svg>
            </a>
            <a
              href="https://github.com/mitmlife"
              class="text-muted-foreground hover:text-red-500 transition-colors"
            >
              <span class="sr-only">GitHub</span>
              <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 20 20">
                <path
                  fill-rule="evenodd"
                  d="M10 0C4.477 0 0 4.484 0 10.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0110 4.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.203 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.942.359.31.678.921.678 1.856 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0020 10.017C20 4.484 15.522 0 10 0z"
                  clip-rule="evenodd"></path>
              </svg>
            </a>
          </div>
          <div class="mt-8 pt-8 border-t border-border">
            <p class="text-sm text-muted-foreground">
              ¬© 2025 mitm.life. All rights reserved.
            </p>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
