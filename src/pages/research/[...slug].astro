---
import { type CollectionEntry, getCollection } from 'astro:content';
import { Header } from '../../components/layout/Header';
import '../../styles/globals.css';
import { SITE_TITLE } from '../../consts';

export async function getStaticPaths() {
  const research = await getCollection('research');
  return research.map(research => ({
    params: { slug: research.slug },
    props: research,
  }));
}

type Props = CollectionEntry<'research'>;

const research = Astro.props;
const { Content } = await research.render();
---

<!doctype html>
<html lang="en" class="dark">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{research.data.title} - {SITE_TITLE}</title>
    <meta name="description" content={research.data.description} />
    <meta name="generator" content={Astro.generator} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="article" />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:title" content={research.data.title} />
    <meta property="og:description" content={research.data.description} />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={Astro.url} />
    <meta property="twitter:title" content={research.data.title} />
    <meta property="twitter:description" content={research.data.description} />
  </head>
  <body class="min-h-screen bg-background text-foreground antialiased">
    <Header client:idle />

    <main>
      <!-- Article Header -->
      <article class="py-20">
        <div class="container mx-auto px-4 sm:px-6 lg:px-8">
          <div class="max-w-4xl mx-auto">
            <!-- Breadcrumb -->
            <nav
              class="flex items-center space-x-2 text-sm text-muted-foreground mb-8"
            >
              <a href="/" class="hover:text-foreground transition-colors"
                >Home</a
              >
              <svg
                class="h-4 w-4"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  strokeLinecap="round"
                  strokeLinejoin="round"
                  strokeWidth={2}
                  d="M9 5l7 7-7 7"></path>
              </svg>
              <a
                href="/research"
                class="hover:text-foreground transition-colors">Research</a
              >
              <svg
                class="h-4 w-4"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  strokeLinecap="round"
                  strokeLinejoin="round"
                  strokeWidth={2}
                  d="M9 5l7 7-7 7"></path>
              </svg>
              <span class="text-foreground">{research.data.title}</span>
            </nav>

            <!-- Article Meta -->
            <div class="mb-8">
              <div class="flex items-center space-x-4 mb-6">
                <span
                  class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-red-500/10 text-red-400 border border-red-500/20"
                >
                  ðŸ§ª {research.data.category}
                </span>
                <time class="text-sm text-muted-foreground">
                  {
                    new Date(research.data.pubDate).toLocaleDateString(
                      'en-US',
                      {
                        year: 'numeric',
                        month: 'long',
                        day: 'numeric',
                      }
                    )
                  }
                </time>
                {
                  research.data.difficulty && (
                    <span
                      class={`px-2 py-1 rounded-full text-xs font-medium ${
                        research.data.difficulty === 'beginner'
                          ? 'bg-green-500/10 text-green-400 border border-green-500/20'
                          : research.data.difficulty === 'intermediate'
                            ? 'bg-yellow-500/10 text-yellow-400 border border-yellow-500/20'
                            : 'bg-red-500/10 text-red-400 border border-red-500/20'
                      }`}
                    >
                      {research.data.difficulty}
                    </span>
                  )
                }
                {
                  research.data.readTime && (
                    <span class="text-xs text-muted-foreground">
                      ðŸ“– {research.data.readTime} read
                    </span>
                  )
                }
              </div>

              <h1
                class="text-4xl lg:text-5xl font-bold leading-tight text-foreground mb-6"
              >
                {research.data.title}
              </h1>

              <p class="text-xl text-muted-foreground leading-relaxed mb-6">
                {research.data.description}
              </p>

              {
                research.data.tags && research.data.tags.length > 0 && (
                  <div class="flex flex-wrap gap-2">
                    {research.data.tags.map(tag => (
                      <span class="px-2 py-1 bg-muted text-muted-foreground text-xs rounded-md">
                        #{tag}
                      </span>
                    ))}
                  </div>
                )
              }
            </div>

            <!-- Research Disclaimer -->
            <div
              class="bg-red-500/10 border border-red-500/20 rounded-lg p-6 mb-8"
            >
              <div class="flex items-start space-x-4">
                <div class="w-6 h-6 text-red-500 flex-shrink-0 mt-1">
                  <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path
                      strokeLinecap="round"
                      strokeLinejoin="round"
                      strokeWidth={2}
                      d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.99-.833-2.764 0L3.05 16.5c-.77.833.192 2.5 1.732 2.5z"
                    ></path>
                  </svg>
                </div>
                <div>
                  <h3 class="font-semibold text-foreground mb-2">
                    Research Disclaimer
                  </h3>
                  <p class="text-sm text-muted-foreground mb-3">
                    This security research is provided for educational and
                    informational purposes only. All vulnerabilities discussed
                    have been responsibly disclosed to the appropriate vendors.
                    Do not attempt to exploit vulnerabilities without proper
                    authorization.
                  </p>
                  <p class="text-sm text-muted-foreground">
                    <strong>Responsible Disclosure:</strong> We follow coordinated
                    disclosure practices and work with security teams to ensure vulnerabilities
                    are properly patched before publication.
                  </p>
                </div>
              </div>
            </div>

            <!-- Article Content -->
            <div class="prose prose-invert prose-lg max-w-none">
              <Content />
            </div>

            <!-- Research Attribution -->
            <div class="mt-12 p-6 bg-muted/20 border border-border rounded-lg">
              <div class="flex items-start space-x-4">
                <div class="w-6 h-6 text-muted-foreground flex-shrink-0 mt-1">
                  <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path
                      strokeLinecap="round"
                      strokeLinejoin="round"
                      strokeWidth={2}
                      d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"
                    ></path>
                  </svg>
                </div>
                <div>
                  <h3 class="font-semibold text-foreground mb-2">
                    Research Attribution
                  </h3>
                  <p class="text-sm text-muted-foreground">
                    If you reference or build upon this research in your own
                    work, please provide proper attribution. For academic use,
                    please cite this work appropriately. For commercial use,
                    please contact us to discuss licensing and attribution
                    requirements.
                  </p>
                </div>
              </div>
            </div>

            <!-- Article Footer -->
            <div class="mt-16 pt-8 border-t border-border">
              <div class="flex items-center justify-between">
                <div class="flex items-center space-x-4">
                  <span class="text-sm text-muted-foreground"
                    >Share this research:</span
                  >
                  <div class="flex items-center space-x-2">
                    <a
                      href={`https://twitter.com/intent/tweet?text=${encodeURIComponent(research.data.title)}&url=${encodeURIComponent(Astro.url.toString())}`}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="text-muted-foreground hover:text-blue-500 transition-colors"
                    >
                      <svg
                        class="h-5 w-5"
                        fill="currentColor"
                        viewBox="0 0 20 20"
                      >
                        <path
                          d="M6.29 18.251c7.547 0 11.675-6.253 11.675-11.675 0-.178 0-.355-.012-.53A8.348 8.348 0 0020 3.92a8.19 8.19 0 01-2.357.646 4.118 4.118 0 001.804-2.27 8.224 8.224 0 01-2.605.996 4.107 4.107 0 00-6.993 3.743 11.65 11.65 0 01-8.457-4.287 4.106 4.106 0 001.27 5.477A4.073 4.073 0 01.8 7.713v.052a4.105 4.105 0 003.292 4.022 4.095 4.095 0 01-1.853.07 4.108 4.108 0 003.834 2.85A8.233 8.233 0 010 16.407a11.616 11.616 0 006.29 1.84"
                        ></path>
                      </svg>
                    </a>
                    <a
                      href={`https://www.linkedin.com/sharing/share-offsite/?url=${encodeURIComponent(Astro.url.toString())}`}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="text-muted-foreground hover:text-blue-600 transition-colors"
                    >
                      <svg
                        class="h-5 w-5"
                        fill="currentColor"
                        viewBox="0 0 20 20"
                      >
                        <path
                          fillRule="evenodd"
                          d="M16.338 16.338H13.67V12.16c0-.995-.017-2.277-1.387-2.277-1.39 0-1.601 1.086-1.601 2.207v4.248H8.014v-8.59h2.559v1.174h.037c.356-.675 1.227-1.387 2.526-1.387 2.703 0 3.203 1.778 3.203 4.092v4.711zM5.005 6.575a1.548 1.548 0 11-.003-3.096 1.548 1.548 0 01.003 3.096zm-1.337 9.763H6.34v-8.59H3.667v8.59zM17.668 1H2.328C1.595 1 1 1.581 1 2.298v15.403C1 18.418 1.595 19 2.328 19h15.34c.734 0 1.332-.582 1.332-1.299V2.298C19 1.581 18.402 1 17.668 1z"
                          clipRule="evenodd"></path>
                      </svg>
                    </a>
                  </div>
                </div>

                <a
                  href="/research"
                  class="flex items-center text-red-500 hover:text-red-400 font-medium transition-colors"
                >
                  <svg
                    class="mr-2 h-4 w-4"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      strokeLinecap="round"
                      strokeLinejoin="round"
                      strokeWidth={2}
                      d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                  </svg>
                  Back to Research
                </a>
              </div>
            </div>
          </div>
        </div>
      </article>
    </main>

    <!-- Footer -->
    <footer class="py-12 bg-secondary border-t border-border">
      <div class="container mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center">
          <div class="flex items-center justify-center space-x-2 mb-4">
            <svg
              class="h-8 w-8 text-red-500"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path>
            </svg>
            <span class="font-bold text-xl text-foreground">mitm.life</span>
          </div>
          <p class="text-muted-foreground mb-6">
            Security research and analysis for the modern web
          </p>
          <div class="flex justify-center space-x-6">
            <a
              href="https://twitter.com/mitmlife"
              class="text-muted-foreground hover:text-red-500 transition-colors"
            >
              <span class="sr-only">Twitter</span>
              <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 20 20">
                <path
                  d="M6.29 18.251c7.547 0 11.675-6.253 11.675-11.675 0-.178 0-.355-.012-.53A8.348 8.348 0 0020 3.92a8.19 8.19 0 01-2.357.646 4.118 4.118 0 001.804-2.27 8.224 8.224 0 01-2.605.996 4.107 4.107 0 00-6.993 3.743 11.65 11.65 0 01-8.457-4.287 4.106 4.106 0 001.27 5.477A4.073 4.073 0 01.8 7.713v.052a4.105 4.105 0 003.292 4.022 4.095 4.095 0 01-1.853.07 4.108 4.108 0 003.834 2.85A8.233 8.233 0 010 16.407a11.616 11.616 0 006.29 1.84"
                ></path>
              </svg>
            </a>
            <a
              href="https://github.com/mitmlife"
              class="text-muted-foreground hover:text-red-500 transition-colors"
            >
              <span class="sr-only">GitHub</span>
              <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 20 20">
                <path
                  fill-rule="evenodd"
                  d="M10 0C4.477 0 0 4.484 0 10.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0110 4.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.203 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.942.359.31.678.921.678 1.856 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0020 10.017C20 4.484 15.522 0 10 0z"
                  clip-rule="evenodd"></path>
              </svg>
            </a>
          </div>
          <div class="mt-8 pt-8 border-t border-border">
            <p class="text-sm text-muted-foreground">
              Â© 2025 mitm.life. All rights reserved.
            </p>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>

<style>
  /* Prose styles for article content */
  .prose {
    color: hsl(var(--foreground));
  }

  .prose h1,
  .prose h2,
  .prose h3,
  .prose h4,
  .prose h5,
  .prose h6 {
    color: hsl(var(--foreground));
  }

  .prose h2 {
    border-bottom: 1px solid hsl(var(--border));
    padding-bottom: 0.5rem;
  }

  .prose code {
    background: hsl(var(--muted));
    padding: 0.125rem 0.25rem;
    border-radius: 0.25rem;
    font-size: 0.875em;
  }

  .prose pre {
    background: hsl(var(--muted)) !important;
    border: 1px solid hsl(var(--border));
    border-radius: 0.5rem;
    overflow-x: auto;
  }

  .prose pre code {
    background: transparent;
    padding: 0;
  }

  .prose blockquote {
    border-left: 4px solid hsl(var(--primary));
    background: hsl(var(--muted) / 0.3);
    margin: 1.5rem 0;
    padding: 1rem 1.5rem;
    border-radius: 0.5rem;
  }

  .prose ul,
  .prose ol {
    padding-left: 1.5rem;
  }

  .prose li {
    margin: 0.25rem 0;
  }

  .prose a {
    color: hsl(var(--primary));
    text-decoration: underline;
    text-decoration-color: hsl(var(--primary) / 0.3);
  }

  .prose a:hover {
    text-decoration-color: hsl(var(--primary));
  }

  .prose table {
    width: 100%;
    border-collapse: collapse;
    margin: 1.5rem 0;
  }

  .prose th,
  .prose td {
    border: 1px solid hsl(var(--border));
    padding: 0.5rem 0.75rem;
    text-align: left;
  }

  .prose th {
    background: hsl(var(--muted));
    font-weight: 600;
  }

  .prose img {
    border-radius: 0.5rem;
    border: 1px solid hsl(var(--border));
  }
</style>
