---
import { getCollection } from 'astro:content';
import { Header } from '../components/Header';
import { SITE_TITLE } from '../consts';

// Get all guides content
const guides = await getCollection('guides');

// Sort by publication date (newest first)
const sortedGuides = guides.sort(
  (a, b) => new Date(b.data.pubDate).valueOf() - new Date(a.data.pubDate).valueOf()
);
---

<!doctype html>
<html lang="en" class="dark">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Security Guides & Tutorials - {SITE_TITLE}</title>
    <meta name="description" content="Step-by-step cybersecurity guides, tutorials, and how-to articles for security professionals and learners.">
    <meta name="generator" content={Astro.generator}>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg">
  </head>
  <body class="min-h-screen bg-background text-foreground antialiased">
    <Header client:idle />
    
    <main>
      <!-- Hero Section -->
      <section class="py-20 bg-gradient-to-br from-purple-950/20 via-background to-background">
        <div class="container mx-auto px-4 sm:px-6 lg:px-8">
          <div class="max-w-3xl mx-auto text-center">
            <div class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-purple-500/10 text-purple-400 border border-purple-500/20 mb-6">
              ðŸŽ¯ Learning Tutorials
            </div>
            <h1 class="text-4xl lg:text-5xl font-bold leading-tight text-foreground mb-6">
              Security Guides & Tutorials
            </h1>
            <p class="text-xl text-muted-foreground leading-relaxed">
              Step-by-step guides and comprehensive tutorials covering cybersecurity fundamentals, 
              advanced techniques, and practical implementation strategies for security professionals.
            </p>
          </div>
        </div>
      </section>

      <!-- Guides Grid -->
      <section class="py-16">
        <div class="container mx-auto px-4 sm:px-6 lg:px-8">
          {sortedGuides.length > 0 ? (
            <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
              {sortedGuides.map((guide) => (
                <article class="group cursor-pointer">
                  <div class="bg-card border border-border rounded-lg overflow-hidden hover:shadow-lg transition-all duration-300 hover:border-purple-500/20">
                    <div class="p-6 space-y-4">
                      <div class="flex items-center justify-between">
                        <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-purple-500/10 text-purple-400 border border-purple-500/20">
                          ðŸ“š {guide.data.category}
                        </span>
                        <time class="text-xs text-muted-foreground">
                          {new Date(guide.data.pubDate).toLocaleDateString()}
                        </time>
                      </div>
                      
                      <h3 class="text-xl font-semibold leading-tight text-card-foreground group-hover:text-purple-500 transition-colors">
                        {guide.data.title}
                      </h3>
                      
                      <p class="text-muted-foreground text-sm leading-relaxed line-clamp-3">
                        {guide.data.description}
                      </p>
                      
                      <div class="flex items-center justify-between pt-2 border-t border-border">
                        <div class="flex items-center space-x-2 text-xs text-muted-foreground">
                          {guide.data.difficulty && (
                            <span class={`px-2 py-1 rounded-full text-xs ${
                              guide.data.difficulty === 'beginner' 
                                ? 'bg-green-500/10 text-green-400' 
                                : guide.data.difficulty === 'intermediate' 
                                ? 'bg-yellow-500/10 text-yellow-400' 
                                : 'bg-red-500/10 text-red-400'
                            }`}>
                              {guide.data.difficulty}
                            </span>
                          )}
                          <span>{guide.data.tags?.join(', ')}</span>
                        </div>
                        <a 
                          href={`/guides/${guide.slug}`}
                          class="flex items-center text-purple-500 hover:text-purple-400 font-medium text-sm transition-colors"
                        >
                          Read Guide
                          <svg class="ml-1 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M17 8l4 4m0 0l-4 4m4-4H3" />
                          </svg>
                        </a>
                      </div>
                    </div>
                  </div>
                </article>
              ))}
            </div>
          ) : (
            <!-- Empty State -->
            <div class="text-center py-20">
              <div class="w-16 h-16 bg-muted rounded-full flex items-center justify-center mx-auto mb-6">
                <svg class="w-8 h-8 text-muted-foreground" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
                </svg>
              </div>
              <h3 class="text-xl font-semibold text-foreground mb-2">
                Guides Coming Soon
              </h3>
              <p class="text-muted-foreground max-w-md mx-auto">
                We're creating comprehensive step-by-step guides and tutorials for cybersecurity topics. 
                Check back soon for detailed learning resources covering fundamental to advanced concepts.
              </p>
            </div>
          )}
        </div>
      </section>

      <!-- Guide Categories -->
      <section class="py-16 bg-muted/20 border-t border-border">
        <div class="container mx-auto px-4 sm:px-6 lg:px-8">
          <div class="text-center mb-12">
            <h2 class="text-3xl font-bold mb-4 text-foreground">Guide Categories</h2>
            <p class="text-muted-foreground max-w-2xl mx-auto">
              Organized tutorials to help you learn cybersecurity systematically and effectively
            </p>
          </div>
          
          <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
            <div class="text-center p-6 bg-background border border-border rounded-lg hover:border-green-500/20 transition-colors">
              <div class="w-12 h-12 bg-green-500/10 rounded-full flex items-center justify-center mx-auto mb-4">
                <svg class="w-6 h-6 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
                </svg>
              </div>
              <h3 class="font-semibold text-foreground mb-2">Beginner Tutorials</h3>
              <p class="text-sm text-muted-foreground">Introduction to cybersecurity concepts and foundational knowledge</p>
            </div>

            <div class="text-center p-6 bg-background border border-border rounded-lg hover:border-blue-500/20 transition-colors">
              <div class="w-12 h-12 bg-blue-500/10 rounded-full flex items-center justify-center mx-auto mb-4">
                <svg class="w-6 h-6 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z" />
                </svg>
              </div>
              <h3 class="font-semibold text-foreground mb-2">Penetration Testing</h3>
              <p class="text-sm text-muted-foreground">Comprehensive pentesting methodologies and practical techniques</p>
            </div>

            <div class="text-center p-6 bg-background border border-border rounded-lg hover:border-purple-500/20 transition-colors">
              <div class="w-12 h-12 bg-purple-500/10 rounded-full flex items-center justify-center mx-auto mb-4">
                <svg class="w-6 h-6 text-purple-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                </svg>
              </div>
              <h3 class="font-semibold text-foreground mb-2">Defensive Security</h3>
              <p class="text-sm text-muted-foreground">Security monitoring, incident response, and defensive strategies</p>
            </div>

            <div class="text-center p-6 bg-background border border-border rounded-lg hover:border-yellow-500/20 transition-colors">
              <div class="w-12 h-12 bg-yellow-500/10 rounded-full flex items-center justify-center mx-auto mb-4">
                <svg class="w-6 h-6 text-yellow-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M8 9l3 3-3 3m5 0h3M5 20h14a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v14a2 2 0 002 2z" />
                </svg>
              </div>
              <h3 class="font-semibold text-foreground mb-2">Implementation</h3>
              <p class="text-sm text-muted-foreground">Step-by-step implementation guides for security solutions</p>
            </div>
          </div>
        </div>
      </section>

      <!-- CTA Section -->
      <section class="py-16 bg-gradient-to-r from-purple-950/20 to-background border-t border-border">
        <div class="container mx-auto px-4 sm:px-6 lg:px-8">
          <div class="max-w-3xl mx-auto text-center">
            <h2 class="text-3xl font-bold text-foreground mb-4">
              Need Custom Training?
            </h2>
            <p class="text-lg text-muted-foreground mb-8">
              Looking for specialized cybersecurity training or custom tutorials for your team? 
              We can create tailored learning materials for your specific security needs.
            </p>
            <div class="flex flex-col sm:flex-row gap-4 justify-center">
              <a
                href="/contact"
                class="inline-flex items-center justify-center px-6 py-3 border-2 border-purple-600 bg-purple-600 text-white rounded-lg font-semibold hover:bg-purple-700 hover:border-purple-700 transition-colors duration-200"
              >
                Request Custom Training
                <svg class="ml-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M17 8l4 4m0 0l-4 4m4-4H3" />
                </svg>
              </a>
              <a
                href="/newsletter"
                class="inline-flex items-center justify-center px-6 py-3 border-2 border-border bg-transparent text-foreground rounded-lg font-semibold hover:bg-secondary transition-colors duration-200"
              >
                Get Guide Updates
                <svg class="ml-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
              </a>
            </div>
          </div>
        </div>
      </section>
    </main>
    
    <!-- Footer -->
    <footer class="py-12 bg-secondary border-t border-border">
      <div class="container mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center">
          <div class="flex items-center justify-center space-x-2 mb-4">
            <svg class="h-8 w-8 text-red-500" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/>
            </svg>
            <span class="font-bold text-xl text-foreground">mitm.life</span>
          </div>
          <p class="text-muted-foreground mb-6">
            Security research and analysis for the modern web
          </p>
          <div class="flex justify-center space-x-6">
